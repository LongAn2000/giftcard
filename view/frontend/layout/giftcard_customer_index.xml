<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">My Gift Card</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Mageplaza\GiftCard\Block\Customer\Info" name="information" template="Mageplaza_GiftCard::info.phtml">
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Mageplaza\GiftCard\Block\Customer\History" name="my_tab" template="Mageplaza_GiftCard::history.phtml">
            </block>
        </referenceContainer>
    </body>
</page>
